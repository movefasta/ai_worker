<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ffw_lg2_leader">
  <xacro:arg name="use_sim" default="false" />
  <xacro:arg name="use_fake_hardware" default="false" />
  <xacro:arg name="fake_sensor_commands" default="false" />
  <xacro:arg name="prefix" default="" />

  <xacro:include filename="$(find ffw_description)/urdf/common/leader/ffw_single_leader_body.urdf.xacro" />

  <xacro:include filename="$(find ffw_description)/ros2_control/ffw_lg2_leader/ffw_single_leader_right.ros2_control.xacro" />

  <link name="world"/>

  <xacro:ffw_leader_body parent="$(arg prefix)world" prefix="$(arg prefix)">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:ffw_leader_body>

  <joint name="$(arg prefix)gripper_r_joint1" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="$(arg prefix)arm_r_link6"/>
    <axis xyz="0 1 0"/>
    <child link="$(arg prefix)gripper_r_link1"/>
    <limit velocity="6.5" effort="1000" lower="-6.28" upper="6.28" />
  </joint>
  <link name="$(arg prefix)gripper_r_link1"/>

  <xacro:ffw_lg2_leader_single_system
      use_sim="$(arg use_sim)"
      use_fake_hardware="$(arg use_fake_hardware)"
      fake_sensor_commands="$(arg fake_sensor_commands)" />

</robot>
